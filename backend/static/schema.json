{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://github.com/m30ws/arduino-hardver-or/blob/v3.0/backend/static/schema.json",
	"title": "Arduino hardver",
	"description": "Otvoreni podaci o Arduino razvojnim plocicama",
	"type": "array",
	"items": {
		"description": "Generic board information",
		"type": "object",
		"properties": {
			"model": {
				"title": "Model",
				"description": "Board model name",
				"type": "string"
			},
			"family_name": {
				"title": "Family name",
				"description": "Board family name",
				"type": "string"
			},
			"sku": {
				"title": "SKU",
				"description": "Board Stock Keeping Unit code",
				"type": "string"
			},
			"microcontroller": {
				"title": "Microcontroller",
				"description": "Microcontroller present in the board",
				"type": "object",
				"properties": {
					"microcontroller_name": {
						"title": "Microcontroller",
						"description": "Model of the microcontroller",
						"type": "string" 
					},
					"low_power": {
						"title": "Low power mode",
						"description": "Can microcontroller run in low-power mode?",
						"type": "boolean"
					},
					"i2c": {
						"title": "I2C",
						"description": "Number of pins supporting I2C protocol",
						"type": "integer",
						"minimum": 0
					},
					"spi": {
						"title": "SPI",
						"description": "Number of pins supporting SPI protocol",
						"type": "integer",
						"minimum": 0
					}
				}
			},
			"clock_speed": {
				"title": "Clock speed",
				"description": "Board clock speed (MHz)",
				"type": "integer",
				"exclusiveMinimum": 0
			},
			"flash_memory": {
				"title": "Flash memory",
				"description": "Amount of memory available for storage (KB)",
				"type": "integer",
				"exclusiveMinimum": 0
			},
			"sram": {
				"title": "SRAM",
				"description": "Amount of static RAM available (KB)",
				"type": "number",
				"exclusiveMinimum": 0
			},
			"operating_voltage": {
				"title": "Operating voltage",
				"description": "Board operating voltage (V)",
				"type": "number",
				"exclusiveMinimum": 0
			},
			"input_voltage": {
				"title": "Input voltage",
				"description": "Board input voltage range (V-V)",
				"type": "string"
			},
			"pins": {
				"title": "Pins",
				"description": "On-board pin information",
				"type": "array",
				"items": {
					"type": "object",
					"properties": {
						"pin_type": {
							"title": "Pin type",
							"description": "One of the 4 types of pins",
							"type": "string",
							"enum": ["digital", "pwm", "analogin", "analogout"]
						},
						"pin_count": {
							"title": "Pin count",
							"description": "Amount of that type of pins on board",
							"type": "integer"
						},
						"pin_list": {
							"title": "Pin list",
							"description": "List of pins of that type on board",
							"type": "array",
							"items": {
								"type": ["string", "number"]
							}
						}
					}
				}
			},
			"length": {
				"title": "Length",
				"description": "Physical length of the board (mm)",
				"type": "number",
				"exclusiveMinimum": 0
			},
			"width": {
				"title": "Width",
				"description": "Physical width of the board (mm)",
				"type": "number",
				"exclusiveMinimum": 0
			},
			"weight": {
				"title": "Weight",
				"description": "Physical weight of the board (g)",
				"type": "number",
				"exclusiveMinimum": 0
			}
		},
		"required": [
			"model",
			"family_name",
			"sku",
			"microcontroller",
			"clock_speed",
			"flash_memory",
			"sram",
			"operating_voltage",
			"input_voltage",
			"pins",
			"length",
			"width",
			"weight"
		]
	}
}
